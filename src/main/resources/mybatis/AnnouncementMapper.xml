<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.community.announcement.mapper.AnnouncementMapper">

  <sql id="selectListWhere">

    <if test="searchType != null and searchValue != null">
      <choose>
        <when test="searchType == 'userId'">
          and user_id like concat('%', #{searchValue}, '%')
        </when>
        <when test="searchType == 'userName'">
          and user_name like concat('%', #{searchValue}, '%')
        </when>
        <when test="searchType == 'phoneNumber'">
          and phone_number like concat('%', #{searchValue}, '%')
        </when>
        <otherwise>
          and
          (
          user_id like concat('%', #{searchValue}, '%')
          or
          user_name like concat('%', #{searchValue}, '%')
          or
          phone_number like concat('%', #{searchValue}, '%')
          )
        </otherwise>
      </choose>
    </if>

  </sql>


  <select id="selectListCount" resultType="long">

    select count(*)
    from announcement
    where 1 = 1
      <include refid="selectListWhere"/>

  </select>

  <select id="selectList"
    resultType="com.project.community.announcement.dto.AnnouncementDto">

    select *
    from announcement
    where 1 = 1
      <include refid="selectListWhere"/>
    order by reg_dt desc

    limit #{pageStart}, #{pageEnd}

  </select>

</mapper>
